<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Document</title>
  <script src="/public/fabric.js"></script>
  <style>body{margin: 0;}</style>
</head>
<body>

  {{#each canvases}}
    <canvas id="{{id}}" width="{{../width}}" height="{{../height}}"></canvas>
  {{/each}}

  <script>

  {{#each canvases}}
    var {{id}} = new fabric.Canvas('{{id}}', {width: {{../width}}, height: {{../height}} });
    {{id}}.loadFromJSON({{{data}}});
  {{/each}}
    
  </script>

</body>
</html>